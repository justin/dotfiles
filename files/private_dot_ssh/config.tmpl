Host *
{{- if eq .chezmoi.os "darwin" }}
  UseKeychain yes
{{- end }}
  AddKeysToAgent yes
  ServerAliveInterval 120
  ServerAliveCountMax 30

Host homelab
  User justin
  HostName homelab.local
  {{- if eq .chezmoi.os "darwin" }}
  IdentityAgent "{{ .chezmoi.homeDir }}/.config/1password/t/agent.sock"
  {{ else }}
  IdentityFile {{ .chezmoi.homeDir }}/.ssh/id_rsa
  {{- end }}

