#!/usr/bin/env zsh
#
# Functions to offer "pretty" logging to the Console from various scripts in this repository.

info() {
  printf "\r  [ \033[00;34mğŸ‰\033[0m ] $1\n"
}

processing() {
  printf "\r  [ \033[00;34mâ³\033[0m ] $1"
}

success() {
  printf "\r\033[2K  [ \033[00;32mğŸ‘\033[0m ] $1\n"
}

warning() {
  printf "\r\033[2K  [\033[0;33mğŸš§\033[0m] $1\n"
}

fail() {
  printf "\r\033[2K  [\033[0;31mğŸš¨\033[0m] $1\n"
  echo ''
  exit 1
}
