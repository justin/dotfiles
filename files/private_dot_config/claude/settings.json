{
  "cleanupPeriodDays": 99999,
  "includeCoAuthoredBy": false,
  "enabledPlugins": {
    "swift-lsp@claude-plugins-official": true
  },
  "permissions": {
    "allow": [
      "Bash(cat:*)",
      "Bash(ls:*)",
      "Bash(rg:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(wc:*)",
      "Bash(tree:*)",
      "Bash(git:log)",
      "Bash(git:status)",
      "Bash(git:diff)",
      "Bash(git:show)"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Read(./config/credentials.json)",
      "Read(./build)"
    ]
  }
}